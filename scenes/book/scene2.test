# to add normal at in object!!
# to add local normal for triangle & sphere!

size 1000 500

camera 0 1 -5 0 1 0 0 1 0 60

point_light -10 10 -10 1 1 1 1 1 1 1

# the floor
material 1 0.9 0.9 0.1 0.9 0 200 
scale 10 0.01 10
sphere 0 0 0 1

# the left wall
material 1 0.9 0.9 0.1 0.9 0 200
translate 0 0 5
rotatey -45
rotatex 90
